
@model IEnumerable<StudentApplication.Models.CourseVM>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <title>CourseDetailsforStudent</title>
</head>
<body style="background-color:#55765C">
    <div class="container mt-5">
        <div class="jumbotron" style="background: linear-gradient(to right, #ff9999 0%, #ccff99 100%);">
            <div class="text-center">
                <p style="font-size:25px;color:#434944"><b>Course details</b></p>
            </div>
            <table class="table text-center table-hover borderless">
                <thead class="thead-dark">
                    <tr>
                        <th><b>DepartmentID</b></th>
                        <th><b>CourseID</b></th>

                        <th><b>Course Name</b></th>
                        <th><b>Semster</b></th>
                        <th><b>Details</b></th>

                    </tr>
                </thead>

                @foreach (var item in Model)
            {
                    <tbody class="table-info">
                        <tr>
                            <td><b>@item.departmentId</b></td>
                            <td><b>@item.courseId</b></td>
                            <td><b>@item.courseName</b></td>
                            <td><b>@item.semesterId</b></td>
                            <td><a href="@Url.Action("GetLibraryDetails", "Library", new { courseID = item.courseId})"><b>Library Details</b></a></td>

                        </tr>

                    </tbody>



                }

            </table>
        </div>
    </div>
</body>
</html>
